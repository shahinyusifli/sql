-- Exercies which you can find them in https://www.w3resource.com/mysql-exercises/create-table-exercises/index.php  

-- Ex 1 
CREATE TABLE countries(
country_id DECIMAL(2,0),
country_name VARCHAR(20),
region_id DECIMAL(10,0)
);


-- Ex 2
CREATE TABLE IF NOT EXISTS countries(
country_id DECIMAL(2,0),
country_name VARCHAR(20),
region_id DECIMAL(10,0)
);


-- Ex 3
CREATE TABLE IF NOT EXISTS dup_countries(
LIKE countries
);


-- Ex 4
CREATE TABLE IF NOT EXISTS dup_countries2
AS SELECT * FROM Orders;


-- EX 5
CREATE TABLE IF NOT EXISTS countries(
country_id VARCHAR(2) NOT NULL,
country_name VARCHAR(50) NOT NULL,
region_id DECIMAL(10,0) NOT NULL
);


-- EX 6
CREATE TABLE IF NOT EXISTS countries(
job_id VARCHAR(2) NOT NULL,
job_title VARCHAR(20) NOT NULL,
max_salary DECIMAL(7,0) NOT NULL,
min_salary DECIMAL(3,0) NOT NULL
CHECK(max_salary <= 10000)
);


-- EX 7
CREATE TABLE IF NOT EXISTS countries(
COUNTRY_ID INTEGER(2) NOT NULL,
COUNTRY_NAME VARCHAR(50) NOT NULL,
REGION_ID DECIMAL(10,0) NOT NULL
CHECK(COUNTRY_NAME IN('iTALY', 'FRANCE', 'US', 'UK'))
);


-- EX 8
CREATE TABLE IF NOT EXISTS job_history(
EMPLOYEE_ID INT(2) NOT NULL,
START_DATE DATE NOT NULL,
END_DATE DATE NOT NULL,
JOB_ID DECIMAL(2,0) NOT NULL,
DEPARTMENT_ID DECIMAL(2,0) NOT NULL
CHECK(END_DATE LIKE '--/--/----')
);


-- EX 9
CREATE TABLE IF NOT EXISTS countries(
COUNTRY_ID INT(2) NOT NULL,
COUNTRY_NAME VARCHAR(50) NOT NULL,
REGION_ID DECIMAL(10,0) NOT NULL,
UNIQUE(COUNTRY_ID)
);


-- EX 10
CREATE TABLE IF NOT EXISTS Jobs(
JOB_ID INT NOT NULL UNIQUE,
J0B_TITLE VARCHAR(50) NOT NULL DEFAULT ' ',
MIN_SALARY DECIMAL(10,0) NOT NULL DEFAULT 8000,
MAX_SALARY DECIMAL(10,0) DEFAULT NULL
);


-- EX 11
CREATE TABLE IF NOT EXISTS countries(
COUNTRY_ID INT PRIMARY KEY NOT NULL,
COUNTRY_NAME VARCHAR(50) NOT NULL DEFAULT 'US',
REGION_ID DECIMAL(10,0) DEFAULT NULL
);


-- EX 12
CREATE TABLE IF NOT EXISTS Countries(
COUNTRY_ID INT AUTO_INCREMENT NOT NULL PRIMARY KEY,
COUNTRY_NAME VARCHAR(50) NOT NULL DEFAULT 'US',
REGION_ID DECIMAL(10,0) NOT NULL
);


-- EX 13
CREATE TABLE IF NOT EXISTS Countries(
COUNTRY_ID INT NOT NULL ,
COUNTRY_NAME VARCHAR(50) NOT NULL DEFAULT 'UK',
REGION_ID DECIMAL(10,0) NOT NULL,
PRIMARY KEY(COUNTRY_ID, REGION_ID)
);


-- EX 14
CREATE TABLE IF NOT EXISTS Jobs1(
JOB_ID VARCHAR(10) NOT NULL PRIMARY KEY,
JOB_TITLE VARCHAR(35)  DEFAULT NULL,
MAX_SALARY DECIMAL(6,0) DEFAULT NULL,
MIN_SALARY DECIMAL(6,0) DEFAULT NULL
);

CREATE TABLE IF NOT EXISTS JobHistory1(
EMPLOYEE_ID INT NOT NULL PRIMARY KEY,
START_DATE DATE NOT NULL,
END_DATE DATE NOT NULL
CHECK(END_DATE LIKE '--/--/----'),
JOB_ID VARCHAR(15) NOT NULL,
DEPARTMENT_ID DECIMAL(10,0) DEFAULT NULL,
FOREIGN KEY(JOB_ID) REFERENCES Jobs1(JOB_ID)
);


-- EX 15
CREATE TABLE IF NOT EXISTS Manager(
DEPARTMENT_ID DECIMAL(4,0) NOT NULL DEFAULT 0,
DEPARTMENT_NAME VARCHAR(30) DEFAULT NULL,
MANAGER_ID DECIMAL(6,0) NOT NULL,
LOCATION_ID DECIMAL(4,0) DEFAULT NULL,
PRIMARY KEY(DEPARTMENT_ID, MANAGER_ID)
);

CREATE TABLE IF NOT EXISTS Employees(
EMPLOYEE_ID INT PRIMARY KEY NOT NULL,
FIRST_NAME VARCHAR(50) NOT NULL,
LAST_NAME VARCHAR(50) NOT NULL,
EMAIL VARCHAR(50) DEFAULT ' ',
DEPARTMENT_ID DECIMAL(4,0) NOT NULL DEFAULT 0,
MANAGER_ID DECIMAL(6,0) NOT NULL,
PHONE_NUMBER VARCHAR(50) NOT NULL,
HIRE_DATE DATE NOT NULL,
CHECK(HIRE_DATE LIKE '--/--/----'),
COMMISION DECIMAL(6,0) NOT NULL,
SALARY INT NOT NULL,
FOREIGN KEY(DEPARTMENT_ID,MANAGER_ID) 
REFERENCES  Manager(DEPARTMENT_ID,MANAGER_ID)
);


#EX 16
CREATE TABLE IF NOT EXISTS Manager(
DEPARTMENT_ID DECIMAL(4,0) NOT NULL DEFAULT 0,
DEPARTMENT_NAME VARCHAR(30) DEFAULT NULL,
MANAGER_ID DECIMAL(6,0) NOT NULL,
LOCATION_ID DECIMAL(4,0) DEFAULT NULL,
PRIMARY KEY(DEPARTMENT_ID, MANAGER_ID)
);

CREATE TABLE IF NOT EXISTS Jobs1(
JOB_ID VARCHAR(10) NOT NULL PRIMARY KEY,
JOB_TITLE VARCHAR(35)  DEFAULT NULL,
MAX_SALARY DECIMAL(6,0) DEFAULT NULL,
MIN_SALARY DECIMAL(6,0) DEFAULT NULL
);

CREATE TABLE IF NOT EXISTS Employees(
EMPLOYEE_ID INT PRIMARY KEY NOT NULL,
FIRST_NAME VARCHAR(50) NOT NULL,
LAST_NAME VARCHAR(50) NOT NULL,
EMAIL VARCHAR(50) DEFAULT ' ',
DEPARTMENT_ID DECIMAL(4,0) NOT NULL DEFAULT 0,
MANAGER_ID DECIMAL(6,0) NOT NULL,
PHONE_NUMBER VARCHAR(50) NOT NULL,
HIRE_DATE DATE NOT NULL,
JOB_ID VARCHAR(10) NOT NULL
CHECK(HIRE_DATE LIKE '--/--/----'),
COMMISION DECIMAL(6,0) NOT NULL,
SALARY INT NOT NULL,
FOREIGN KEY(DEPARTMENT_ID,MANAGER_ID) 
REFERENCES  Manager(DEPARTMENT_ID,MANAGER_ID),
FOREIGN KEY(JOB_ID) REFERENCES (Jobs1),
)ENGINE=InnoDB;















































